%h1= @user.first_name+" "+@user.last_name
%h2= "Addresses"
%table.addresses{ :border => 1, :width => "100%", :class => @addresses.blank? && "empty"}
	%thead
		%tr
			%th= "Street"
			%th= "City"
			%th= "State"
			%th= "Zip Code"
	%tbody
		- @addresses.each do|address|
			%tr.address
				%td= address.street
				%td= address.city
				%td= address.state
				%td= address.zip_code

%h2= "Phone Numbers"
%table.phone_numbers{ :border => 1, :width => "100%", :class => @phone_numbers.blank? && "empty"}
	%thead
		%tr
			%th= "Area Code"
			%th= "Phone Number"
			%th= "Label"
	%tbody
		- @phone_numbers.each do|phone_number|
			%tr.phone_number
				%td= phone_number.area_code
				%td= phone_number.phone_number
				%td= phone_number.label

%h2= "Email Addresses"
%table.email_addresses{ :border => 1, :width => "100%", :class => @email_addresses.blank? && "empty"}
	%thead
		%tr
			%th= "Email Address"
	%tbody
		- @email_addresses.each do|email_address|
			%tr.email_address
				%td= email_address.email_address

= link_to "Back", user_index_url, :title => 'Back'

= link_to "Delete", @user, method: :delete